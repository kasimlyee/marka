{
  "name": "marka-report-generator",
  "version": "1.0.0",
  "description": "Advanced Report Card Generator for Ugandan Schools - UNEB Compliant",
  "main": "electron/main.cjs",
  "author": "Kasim Lyee <lyee@codewithlyee.com>",
  "license": "MIT",
  "private": true,
  "homepage": "https://marka.codewithlyee.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/kasimlyee/marka.git"
  },
  "type": "module",
  "keywords": [
    "electron",
    "report-card",
    "education",
    "uganda",
    "uneb",
    "school-management",
    "grades",
    "pdf-generation"
  ],
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start-react\" \"wait-on http://localhost:3000 && xvfb-run electron .\"",
    "start-react": "vite",
    "build": "npm run build-react && electron-builder",
    "build-react": "npm run build",
    "build-win": "npm run build-react && electron-builder --win",
    "build-mac": "npm run build-react && electron-builder --mac",
    "build-linux": "npm run build-react && electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "npm run build-react && electron-builder --publish=never",
    "publish": "npm run build-react && electron-builder --publish=always",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.jsx",
    "lint:fix": "eslint . --ext .js,.jsx --fix",
    "postinstall": "electron-builder install-app-deps",
    "prepare": "husky install"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.16.0",
    "@tailwindcss/vite": "^4.1.11",
    "archiver": "^6.0.1",
    "async-mutex": "^0.5.0",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^12.2.0",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "electron-context-menu": "^3.6.1",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.0.1",
    "electron-updater": "^6.1.7",
    "electron-window-state": "^5.0.3",
    "exceljs": "^4.4.0",
    "extract-zip": "^2.0.1",
    "form-data": "^4.0.0",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "lucide-react": "^0.535.0",
    "moment": "^2.30.1",
    "node-cron": "^3.0.3",
    "node-machine-id": "^1.1.12",
    "nodemailer": "^6.9.7",
    "pdfkit": "^0.14.0",
    "qrcode": "^1.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sharp": "^0.33.1",
    "speakeasy": "^2.0.0",
    "systeminformation": "^5.21.22",
    "tailwindcss": "^4.1.11",
    "tar": "^7.4.3",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "vite": "^7.0.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.codewithlyee.marka",
    "productName": "Marka Report Generator",
    "copyright": "Copyright Â© 2025 Kasim Lyee",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/main.js",
      "electron/preload.js",
      "electron/src/**/*",
      "build/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,readme.md,changelog.md}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/*.d.ts",
      "!node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "synopsis": "Report Card Generator for Ugandan Schools",
      "description": "Professional report card generation software compliant with Uganda National Examinations Board (UNEB) standards for PLE, UCE, and UACE.",
      "publisherName": "Kasim Lyee"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Marka Report Generator",
      "include": "assets/installer.nsh",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "displayLanguageSelector": true,
      "menuCategory": "Education"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.education",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Education",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "kasimlyee",
        "repo": "marka",
        "private": false
      }
    ],
    "compression": "maximum",
    "removePackageScripts": true,
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/test/**/*"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/src/test/setup.js"
    ]
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
